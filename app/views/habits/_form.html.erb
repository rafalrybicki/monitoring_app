<%= turbo_frame_tag habit do %>
  <%= form_with model: habit do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, autofocus: true %>
    </p>
    <p>
      <%= form.label :daily_target %><br>
      <%= form.text_field :daily_target %>
    </p>
    <p>
      <%= form.label :weekly_target %><br>
      <%= form.text_field :weekly_target %>
    </p>
    <p>
      <%= form.label :frequency %><br>
      <%= form.text_field :frequency %>
    </p>
    <p>
      <%= form.submit data: { turbo_frame: "_top"} %>
    </p>
  <% end %>
  <%= link_to 'Back', :back, data: { turbo_frame: "_top"} %>
<% end %>
