<%= turbo_frame_tag habit do %>
  <%= form_with model: habit do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, autofocus: true %>
    </p>
    <p>
      <%= form.label :daily_target %><br>
      <%= form.number_field :daily_target %>
    </p>
    <p>
      <%= form.label :weekly_target %><br>
      <%= form.number_field :weekly_target %>
    </p>
    <p>
      <%= form.collection_check_boxes(:frequency,
                                      { 'Mon': 1, 'Tue': 2, 'Wed': 3, 'Thu': 4, 'Fri': 5, 'Sat': 6, 'Sun': 0 },
                                      :last,
                                      :first) %>
    </p>
    <p>
      <%= form.label :order %><br>
      <%= form.number_field :order %>
    </p>
    <p>
      <%= form.submit data: { turbo_frame: "_top"} %>
    </p>
  <% end %>
  <%= link_to 'Back', :back, data: { turbo_frame: "_top"} %>
<% end %>
