<table>
  <tr>
    <th>habit</th>
    <% @days_of_month.each do |day| %>
      <th>
        <%= day %>
      </th>
    <% end %>
  </tr>

  <%= render @habits %>

  <tr>
    <td>day %</td>
    <% @days.each do |day| %>
      <td>
        <%= day_percentage(day.total_tasks,
                           day.completed_tasks,
                           (day.total_habits || 0),
                           (day.completed_habits || 0)) %>
      </td>
    <% end %>
  </tr>
</table>
<br>
<%= turbo_frame_tag Habit.new do %>
  <%= link_to "New habit", new_habit_path %>
<% end %>
