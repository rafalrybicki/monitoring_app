<%= turbo_frame_tag "habit-#{habit_id}-#{date}", class: habit_item_css_class(target, date, habit_item) do %>
  <% if habit_item %>
    <%= button_to '+', habit_item_path(habit_item, habit_item: { quantity: habit_item.quantity + 1 }), method: :patch %>

    <%= habit_item.quantity %>

    <% if habit_item.quantity > 0 %>
      <%= button_to '-', habit_item_path(habit_item, habit_item: { quantity: habit_item.quantity - 1 }), method: :patch %>
    <% end %>
  <% else %>
    <%= button_to '+', habit_items_path(habit_item: { habit_id:, date:, quantity: 1 }), method: :post %>
  <% end %>
<% end %>
