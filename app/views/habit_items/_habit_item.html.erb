<%= turbo_frame_tag "habit-#{habit_id}-#{date}", class: habit_item_css_class(target, date, habit_item&.quantity) do %>
  <%= button_to habit_item_path({
                                  habit_id:,
                                  date:,
                                  type: 'increment',
                                  view: 'habits'
                                }), method: :patch do %>
    <%= bootstrap_icon "plus-square" %>
  <% end %>
  <% if habit_item && habit_item.quantity > 0 %>
    <%= habit_item.quantity %>
    <%= button_to habit_item_path({
                                    habit_id:,
                                    date: ,
                                    type: 'decrement',
                                    view: 'habits'
                                  }), method: :patch do %>
      <%= bootstrap_icon "dash-square" %>
    <% end %>
  <% end %>
<% end %>
