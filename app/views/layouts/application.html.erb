<!DOCTYPE html>
<html>
  <head>
    <title>MonitoringApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="flash">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <nav>
      <ul>
        <li>
          <%= link_to 'prev day', day_path(param_date - 1.day) %>
        </li>
        <li>
          <%= link_to 'next day', day_path(param_date + 1.day) %>
        </li>
        <li>
          <%= link_to 'Today', root_path %>
        </li>
        <li>
          <%= link_to 'Habits', habits_path %>
        </li>
        <li>
          <%= link_to 'Days', days_path %>
        </li>
      </ul>
    </nav>
    <div class="conatainer">
      <%= yield %>
    </div>
  </body>
</html>
