<div style="display:flex; background-color: red">
  <p style="flex: 1">
    <%= task.content %>
  </p>

  <%= button_to 'cancel',
                cancel_day_task_path(task.day.id, task.id),
                method: :patch %>

  <%= button_to 'Add to today',
                cancel_day_task_path(task.day.id, task.id, { new_date: Date.today }),
                method: :patch %>

  <%= button_to 'Add to tomorrow',
                cancel_day_task_path(task.day.id, task.id, { new_date: Date.tomorrow }),
                method: :patch %>
</div>
