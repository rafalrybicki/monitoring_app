<%= turbo_frame_tag task do %>
  <div>
    <%= form_with model: [ @day, task ], data: { controller: "task", action: "turbo:submit-end->task#handleSubmit" } do |form| %>
      <p>
        <%= form.label :content %><br>
        <%= form.text_field :content, autocomplete: 'off', autofocus: true %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>

    <%= link_to 'Back', :back %>
  </div>
<% end %>
