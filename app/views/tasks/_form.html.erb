<%= turbo_frame_tag @task do %>
  <div>
    <%= form_with model: [ @day, @task ] do |form| %>
      <p>
        <%= form.label :content %><br>
        <%= form.text_field :content %>
      </p>
      <p>
        <%= form.submit data: { turbo: false }%>
      </p>
    <% end %>
    <%= link_to 'Back', :back %>
  </div>
<% end %>
